@using System.Linq;

@{
    Layout = null; // Ensure no layout is applied
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Name's CV</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            color: #333;
            line-height: 1.6;
        }

        .header {
            text-align: center;
            padding: 30px;
            background-color: #007bff;
            color: white;
        }

        .header h1 {
            font-size: 2rem;
            font-weight: bold;
        }

        .header p {
            margin: 0;
        }

        .content {
            padding: 20px;
        }

        .section-title {
            font-size: 1.4rem;
            color: #007bff;
            border-bottom: 2px solid #007bff;
            margin-bottom: 15px;
        }

        .row {
            margin-bottom: 30px;
        }

        .skill-level, .language-level {
            color: #555;
            font-size: 0.9rem;
        }

        .download-buttons {
            margin-top: 30px;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="header">
        <h1>@Model.Name</h1>
        <p>@Model.Email | @Model.Phone | @Model.Address</p>
    </div>

    <div class="content container">
        <!-- Professional Summary -->
        <div class="row">
            <h2 class="section-title">Professional Summary</h2>
            <p>@Model.ProfessionalSummary</p>
        </div>

        <!-- Two-Column Section -->
        <div class="row">
            <div class="col-md-6">
                <h2 class="section-title">Work Experience</h2>
                <ul class="list-unstyled">
                    @foreach (var experience in @Model.WorkExperience.Split("\n"))
                    {
                        var details = experience.Split(',');
                        <li class="mb-2">
                            <strong>@details[0]</strong> at @details[1] <br>
                            <small>@details[2]</small>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-md-6">
                <h2 class="section-title">Education</h2>
                <ul class="list-unstyled">
                    @foreach (var education in @Model.EducationBackground.Split("\n"))
                    {
                        var details = education.Split(',');
                        <li class="mb-2">
                            <strong>@details[0]</strong> <br>
                            @details[1], Class of @details[2]
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Skills and Languages -->
        <div class="row">
            <div class="col-md-6">
                <h2 class="section-title">Skills</h2>
                <ul class="list-unstyled">
                    @foreach (var skill in @Model.Skills.Split("\n"))
                    {
                        var details = skill.Split(',');
                        <li>@details[0] <span class="skill-level">(@details[1])</span></li>
                    }
                </ul>
            </div>
            <div class="col-md-6">
                <h2 class="section-title">Languages</h2>
                <ul class="list-unstyled">
                    @foreach (var language in @Model.Languages.Split("\n"))
                    {
                        var details = language.Split(',');
                        <li>@details[0] <span class="language-level">(@details[1] proficiency)</span></li>
                    }
                </ul>
            </div>
        </div>

        @if (Context.Request.Path == "/cv/preview")
        {
            @* place the buttons one on left the other in the right *@
            <div class="container text-center mb-4 justify-content-between">
                <a href="/cv/" class="btn btn-primary me-5" style="min-width: 150px;">Back</a>
                <a href="/cv/pdf" class="btn btn-success ms-5" style="min-width: 150px;">Download CV</a>
            </div>
        }

    </div>
</body>

</html>
